<ebay-dialog-base
    ...input
    open=input.open
    classPrefix="panel-dialog"
    on-modal-open("emit", "panel-dialog-open")
    on-modal-close("emit", "panel-dialog-close")
    class=[input.class, "panel-dialog--mask-fade-slow"]
    window-class=[
        "panel-dialog__window--slide",
        input.position === "end" && "panel-dialog__window--end"
    ]>
    <${input.renderBody}/>
</ebay-dialog-base>
